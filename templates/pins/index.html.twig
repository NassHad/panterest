{% extends 'layouts/base.html.twig' %}

{% block title 'Panterest' %}

{% block body %}
	{% if pins|length > 0 %}
		<h1 class="mb-4 text-center text-muted">{{ pluralize(pins|length, 'Pin', 'Pins') }}</h1>
		{% for row in pins|batch(3) %}
			<div class="row">
				{% for pin in row %}
					<div class="col-md-4">
						<article class="pin bg-white rounded shadow">
							<div class="mw-100 overflow-hidden rounded-top">
								<a href="{{ path('app_pins_show', {id:pin.id}) }}">
									<img height="300px" src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeholder.jpg'))|imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}"/>
								</a>
							</div>
							<h2 class="h5 ps-3 pt-3">
								<a class="text-secondary text-decoration-none" href="{{ path('app_pins_show', {id:pin.id}) }}">{{ pin.title }}</a>
							</h2>
							<p class="ps-3 pb-3 text-muted"><small>
								Submitted by [OWNER FULL NAME]
							</small>
								</p>
						</article>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	{% else %}
		<h1 class="mt-5 text-center">No pins yet.
			<a href="{{ path('app_pins_create') }}">Be the first !</a>
		</h1>
	{% endif %}
{% endblock %}
